/* ============================================================================
   NAVIGATION BAR
   ============================================================================ */

QWidget[class="navbar"] {
    background-color: #ffffff;
    border-bottom: 1px solid #e0e0e0;
    padding: 0px;
    margin: 0px;
    min-height: 60px;
    max-height: 60px;
}

QPushButton[class="nav-link"] {
    background-color: transparent;
    color: #1f2937;
    border: none;
    border-radius: 0px;
    padding: 8px 20px;
    font-size: 12pt;
    font-weight: 600;
    margin: 0px;
    min-height: 60px;
    text-align: center;
}

QPushButton[class="nav-link"]:hover {
    background-color: #f5f7fa;
    color: #3b82f6;
}

QPushButton[class="nav-link"][active="true"] {
    background-color: transparent;
    color: #3b82f6;
    border-bottom: 3px solid #3b82f6;
}

/* ============================================================================
   LIST WIDGETS
   ============================================================================ */

QListWidget {
    background-color: #ffffff;
    border: 1px solid #e5e7eb;
    border-radius: 8px;
}

QListWidget::item {
    padding: 10px;
    border-bottom: 1px solid #f3f4f6;
}

QListWidget::item:hover {
    background-color: #f9fafb;
}

QListWidget::item:selected {
    background-color: #e0e7ff;
    color: #1f2937;
    font-weight: 500;
}

/* ============================================================================
   TABLE WIDGETS
   ============================================================================ */

QTableWidget {
    background-color: #ffffff;
    border: 1px solid #e0e0e0;
    border-radius: 6px;
    gridline-color: #f0f0f0;
}

QTableWidget::item {
    padding: 8px;
}

QTableWidget::item:selected {
    background-color: #e3f2fd;
    color: #1f2937;
}

QHeaderView::section {
    background-color: #f5f7fa;
    color: #1f2937;
    padding: 8px;
    border: none;
    border-bottom: 1px solid #e0e0e0;
    font-weight: 600;
    font-size: 10pt;
}

/* ============================================================================
   SCROLL BARS
   ============================================================================ */

QScrollBar:vertical {
    background-color: #f5f7fa;
    width: 10px;
    border-radius: 5px;
}

QScrollBar::handle:vertical {
    background-color: #bdc3c7;
    border-radius: 5px;
    min-height: 20px;
}

QScrollBar::handle:vertical:hover {
    background-color: #95a5a6;
}

QScrollBar:horizontal {
    background-color: #f5f7fa;
    height: 10px;
    border-radius: 5px;
}

QScrollBar::handle:horizontal {
    background-color: #bdc3c7;
    border-radius: 5px;
    min-width: 20px;
}

QScrollBar::handle:horizontal:hover {
    background-color: #95a5a6;
}

/* ============================================================================
   PROFILE WIDGET SPECIFIC
   ============================================================================ */

