/* Resource bindings - utility classes to attach SVGs from resources.qrc
   Use `QLabel` with `class="app-logo"` or `class="hero-logo"` in UI
   to show the application/logo images. Use `QPushButton[class="icon-only"]`
   for square icon buttons that rely on background-image. */

/* Logo placeholders ‚Äî use emoji text on the QLabel itself instead
   (images removed). To show the logo, set the label text to the
   hospital emoji "üè•" (or another emoji) in UI code. */
QLabel[class="app-logo"] {
    min-height: 40px;
    min-width: 120px;
    background-color: transparent;
    font-size: 18pt;
}

QLabel[class="hero-logo"] {
    min-height: 120px;
    min-width: 320px;
    background-color: transparent;
    font-size: 48pt;
}

QPushButton[class="icon-only"] {
    background-color: transparent;
    border: none;
    min-width: 36px;
    min-height: 36px;
    padding: 6px;
}

/* Provide default background icons for some utility widgets */
QWidget[class="hero"] { 
    /* decorative imagery removed ‚Äî prefer emoji placed in a QLabel
       inside the hero or use icon fonts. */
}


/* Global Settings - Fixed Theme (–Ω–µ –º–µ–Ω—è–µ—Ç—Å—è —Å–∏—Å—Ç–µ–º–Ω—ã–º–∏ –Ω–∞—Å—Ç—Ä–æ–π–∫–∞–º–∏) */
* {
    font-family: -apple-system, "Segoe UI", "Noto Sans", "Helvetica Neue", sans-serif;
    font-size: 11pt;
    color: #1f2937 !important;
    background-color: #ffffff !important;
}

QMainWindow, QDialog {
    background-color: #ffffff !important;
    border: none;
    color: #1f2937 !important;
}

QWidget {
    color: #1f2937 !important;
    background-color: #ffffff !important;
}

/* Force override system theme */
QApplication {
    color: #1f2937 !important;
    background-color: #ffffff !important;
}

QLabel {
    color: #333333 !important;
    background-color: transparent;
    border: none;
}

QLineEdit, QTextEdit, QPlainTextEdit {
    background-color: #ffffff !important;
    color: #1f2937 !important;
    border: 1px solid #e0e0e0 !important;
    border-radius: 6px;
    padding: 10px 12px;
}


QComboBox, QSpinBox, QDoubleSpinBox {
    background-color: #ffffff !important;
    color: #1f2937 !important;
    border: 1px solid #e0e0e0 !important;
    border-radius: 6px;
}

QGroupBox {
    color: #1f2937 !important;
    border: 1px solid #e0e0e0 !important;
    border-radius: 8px;
    background-color: #ffffff !important;
}

/* Emoji/icon replacements styling */
QLabel[class="info-icon"] {
    font-size: 24pt;
    background-color: transparent;
}

/* Emoji infographic widget used across screens */


QPushButton[class="emoji-button"], QPushButton[class="icon-button"] {
    font-size: 12pt;
    padding: 6px;
    background-color: transparent;
}

QFrame {
    background-color: #ffffff !important;
    color: #1f2937 !important;
    border: none;
}

QMenuBar, QMenuBar::item {
    background-color: #ffffff !important;
    color: #1f2937 !important;
    border: none;
}

QMenu, QMenu::item:selected {
    background-color: #f5f5f5 !important;
    color: #1f2937 !important;
}

QToolBar {
    background-color: #ffffff !important;
    border: none;
}

QWidget[class="dashboard-widget"],
QWidget[class="profile-widget"] {
    background-color: #f5f5f5;
}

/* ============================================================================
   LANDING PAGE / HERO SECTION
   ============================================================================ */

QWidget[class="hero"] {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:1,
        stop:0 #1e5f8f,
        stop:1 #00a8cc);
    border: none;
    border-radius: 0px;
    padding: 60px 40px;
    min-height: 320px;
}

QLabel[class="hero-title"] {
    color: #ffffff;
    font-size: 32pt;
    font-weight: 700;
    background-color: transparent;
    padding: 0px;
}

QLabel[class="hero-subtitle"] {
    color: rgba(255, 255, 255, 0.9);
    font-size: 14pt;
    font-weight: 400;
    background-color: transparent;
    padding: 10px 0px 0px 0px;
    line-height: 1.6;
}

QLabel[class="page-title"] {
    font-size: 28pt;
    font-weight: 700;
    color: #333333;
    background-color: transparent;
}

QLabel[class="page-subtitle"] {
    font-size: 11pt;
    color: #888888;
    background-color: transparent;
}

/* ============================================================================
   BUTTONS
   ============================================================================ */

QPushButton {
    background-color: #3b82f6;
    color: #ffffff;
    border: 1px solid #2563eb; /* –±–∞–∑–æ–≤–∞—è –æ–±–≤–æ–¥–∫–∞ –¥–ª—è –≤—Å–µ—Ö –∫–Ω–æ–ø–æ–∫ */
    border-radius: 6px;
    padding: 10px 24px;
    font-size: 11pt;
    font-weight: 600;
    min-height: 40px;
    min-width: 120px;
}

QPushButton:hover {
    background-color: #2563eb;
}

QPushButton:pressed {
    background-color: #1d4ed8;
}

QPushButton:disabled {
    background-color: #bdc3c7;
    color: #95a5a6;
}

QPushButton[class="primary"] {
    background-color: #3b82f6;
    color: #ffffff;
    font-weight: 700;
    min-height: 44px;
    font-size: 12pt;
    border: 2px solid #1d4ed8; /* –±–æ–ª–µ–µ –≤—ã—Ä–∞–∑–∏—Ç–µ–ª—å–Ω–∞—è –æ–±–≤–æ–¥–∫–∞ –¥–ª—è primary */
    border-radius: 6px;
}

QPushButton[class="primary"]:hover {
    background-color: #2563eb;
}

QPushButton[class="secondary"] {
    background-color: transparent;
    color: #3b82f6;
    border: 2px solid #3b82f6;
}

QPushButton[class="secondary"]:hover {
    background-color: rgba(59, 130, 246, 0.1);
}

QPushButton[class="success"] {
    background-color: #27ae60;
}

QPushButton[class="success"]:hover {
    background-color: #229954;
}

QPushButton[class="danger"] {
    background-color: #e74c3c;
}

QPushButton[class="danger"]:hover {
    background-color: #c0392b;
}

QPushButton[class="ghost"] {
    background-color: transparent;
    color: #666666;
    border: 1px solid #d1d5db;
}

QPushButton:focus {
    border: 2px solid rgba(59,130,246,0.6);
    outline: none;
}

QPushButton[class="ghost"]:hover {
    color: #1e5f8f;
}

/* ============================================================================
   TEXT INPUTS
   ============================================================================ */

QLineEdit {
    background-color: #ffffff;
    color: #333333;
    border: 1px solid #e0e0e0;
    border-radius: 6px;
    padding: 10px 12px;
    font-size: 11pt;
    min-height: 36px;
}

QScrollArea[class="scrollable-area"] {
    border: none;
    background-color: #ffffff;
}

QWidget[class="scrollable-content"] {
    background-color: #ffffff;
}

QScrollArea[class="no-border-scrollarea"] {
    border: none;
}

/* Scrollbar styling */
QScrollBar:vertical {
    border: none;
    background: #f5f5f5;
    width: 8px;
    margin: 0px 0px 0px 0px;
}
QScrollBar::handle:vertical {
    background: #cbd5e0;
    border-radius: 4px;
    min-height: 20px;
}
QScrollBar::handle:vertical:hover {
    background: #a0aec0;
}
QScrollBar::sub-line:vertical, QScrollBar::add-line:vertical {
    border: none;
    background: none;
}

/* Detail menu */
QWidget[class="detail-menu"] {
    background-color: #f9fafb;
    border-left: 1px solid #e5e7eb;
}

QPushButton[class="detail-toggle"] {
    background-color: #3b82f6;
    color: white;
    border: none;
    border-radius: 6px;
    font-weight: 700;
    font-size: 16px;
}
QPushButton[class="detail-toggle"]:hover {
    background-color: #2563eb;
}

QLabel[class="detail-label"] {
    color: #6b7280;
    font-size: 10pt;
    font-weight: 600;
    text-transform: uppercase;
}

QLabel[class="detail-value"] {
    color: #1f2937;
    font-size: 11pt;
    font-weight: 500;
}

/* Appointment calendar day button states */
QPushButton[class="day-button"][state="selected"] {
    background-color: #2196F3;
    color: white;
    border: 2px solid #1976D2;
    border-radius: 4px;
    font-weight: bold;
    padding: 5px;
}
QPushButton[class="day-button"][state="selected"]:hover {
    background-color: #1976D2;
}
QPushButton[class="day-button"][state="available"] {
    background-color: #E3F2FD;
    color: #1565C0;
    border: 2px solid #2196F3;
    border-radius: 4px;
    font-weight: bold;
    padding: 5px;
}
QPushButton[class="day-button"][state="available"]:hover {
    background-color: #BBDEFB;
    border: 2px solid #1976D2;
}
QPushButton[class="day-button"][state="normal"] {
    background-color: #F5F5F5;
    color: #9E9E9E;
    border: 1px solid #E0E0E0;
    border-radius: 4px;
    padding: 5px;
}
QPushButton[class="day-button"][state="normal"]:disabled {
    background-color: #F5F5F5;
    color: #BDBDBD;
}

/* Cards and selectable cards */
QWidget[class="specialty-card"] {
    border: 2px solid #e0e0e0;
    border-radius: 8px;
    background-color: white;
}
QWidget[class="specialty-card"]:hover {
    border: 2px solid #4CAF50;
    background-color: #f9fff9;
}

QWidget[class="doctor-card"] {
    border: 2px solid #e0e0e0;
    border-radius: 8px;
    background-color: white;
}
QWidget[class="doctor-card"]:hover {
    border: 2px solid #2196F3;
    background-color: #f0f7ff;
}

QPushButton[class="back-button"] {
    border: 1px solid #cccccc;
    border-radius: 4px;
    padding: 8px 12px;
    background-color: white;
}
QPushButton[class="back-button"]:hover { background-color: #f5f5f5; }

QLabel[class="page-title"] { font-weight: 700; font-size: 18pt; }

QLabel[class="section-header"] { font-weight: 700; font-size: 18pt; }
QLabel[class="profile-name"] { font-weight: 700; font-size: 16pt; }

/* Invitation code input / error label */
QLineEdit[class="invitation-code-input"] { font-size: 14pt; letter-spacing: 2px; font-weight: 700; }
QLabel[class="error-label"] { color: #ef4444; font-weight: 700; }

/* status property on labels */
QLabel[status="error"] { color: #ef4444; }
QLabel[status="success"] { color: #10b981; }

QLabel[class="use-code-label"] {
    font-weight: 600;
    color: #1f2937;
}

QLabel[class="status-label"] {
    font-weight: 500;
    font-size: 10pt;
}

QLineEdit:focus {
    border: 2px solid #3b82f6;
    background-color: #f8fbff;
}

QLineEdit:hover {
    border: 1px solid #bdc3c7;
}

QLineEdit:read-only {
    background-color: #f5f7fa;
    color: #4b5563;
    border: 1px solid #e0e0e0;
}

QTextEdit {
    background-color: #ffffff;
    color: #333333;
    border: 1px solid #e0e0e0;
    border-radius: 6px;
    padding: 10px 12px;
}

QPlainTextEdit {
    background-color: #ffffff;
    color: #111827;
    border: 1px solid #e5e7eb;
    border-radius: 6px;
    padding: 8px 10px;
    font-family: "JetBrains Mono", "Fira Code", monospace;
    font-size: 10pt;
}

QPlainTextEdit[class="test-users-text"] {
    background-color: #f9fafb;
    border: 1px dashed #d1d5db;
    border-radius: 6px;
    padding: 8px 10px;
}

QWidget[class="test-users-panel"] {
    background-color: #eff6ff;
    border: 1px solid #bfdbfe;
    border-radius: 10px;
    padding: 12px 14px;
    margin-top: 16px;
}

QLabel[class="patient-info-hint"] {
    color: #666666;
    font-style: italic;
}

QLabel[class="family-head-label"] {
    font-weight: bold;
    font-size: 12pt;
}

QLabel[class="family-status-label"] {
    color: #2d7f2d;
}

QLabel[class="manager-email-label"] {
    color: #666666;
}

QLabel[class="manager-welcome-label"] {
    color: #666666;
    font-size: 11pt;
}

QWidget[class="manager-quick-card"] {
    background-color: #f0f4f8;
    border-radius: 8px;
}

QLabel[class="manager-quick-desc"] {
    color: #666666;
    padding-top: 8px;
}

QLabel[class="slot-info-label"] {
    color: #666666;
    font-size: 10pt;
    padding: 8px;
}

QLabel[class="patient-status-label"] {
    color: #666666;
}

/* Icon label outlines to improve contrast */
QLabel[class="info-icon"], QLabel[class="service-icon"], QLabel[class="header-logo-icon"], QLabel[class="doctor-card-icon"], QLabel[class="stats-icon"], QLabel[class="contact-icon"] {
    border: 1px solid rgba(0,0,0,0.06);
    border-radius: 6px;
    padding: 6px;
    background-color: #ffffff;
}

/* Cards and important regions should have subtle outlines */
QWidget[class="info-card"], QWidget[class="service-card"], QWidget[class="doctor-card"], QWidget[class="stats-badge"], QWidget[class="content-wrapper"] {
    box-shadow: none;
    border: 1px solid #e6e9ee;
    border-radius: 8px;
    background-color: #ffffff;
}

/* Header logo button: make icon and text distinct */
QPushButton[class="header-logo-btn"] QLabel[class="header-logo-icon"] {
    margin-right: 8px;
}
    border: 1px solid #e0e0e0;
    border-radius: 6px;
    padding: 10px 12px;
    font-size: 11pt;
}

QTextEdit:focus {
    border: 2px solid #3b82f6;
}

QComboBox {
    background-color: #ffffff;
    color: #333333;
    border: 1px solid #e0e0e0;
    border-radius: 6px;
    padding: 8px 12px;
    font-size: 11pt;
    min-height: 36px;
}

QComboBox:focus {
    border: 2px solid #3b82f6;
}

QComboBox::drop-down {
    border: none;
    width: 30px;
}

QComboBox::down-arrow {
    image: none;
    width: 0px;
}

/* ============================================================================
   DATE/TIME INPUTS
   ============================================================================ */

QDateEdit, QDateTimeEdit, QTimeEdit {
    background-color: #ffffff;
    color: #333333;
    border: 1px solid #e0e0e0;
    border-radius: 6px;
    padding: 8px 12px;
    font-size: 11pt;
    min-height: 36px;
}

QDateEdit:focus, QDateTimeEdit:focus, QTimeEdit:focus {
    border: 2px solid #3b82f6;
}

/* ============================================================================
   LABELS
   ============================================================================ */

QLabel {
    color: #333333;
    background-color: transparent;
    border: none;
}

QLabel[class="title"] {
    font-size: 28pt;
    font-weight: 700;
    color: #3b82f6;
    padding: 20px 0px;
}

QLabel[class="subtitle"] {
    font-size: 16pt;
    font-weight: 600;
    color: #1f2937;
    padding: 15px 0px;
}

QLabel[class="section-title"] {
    font-size: 14pt;
    font-weight: 700;
    color: #3b82f6;
    padding: 15px 0px 10px 0px;
}

QLabel[class="field-label"] {
    font-size: 10pt;
    font-weight: 700;
    color: #1f2937;
    padding: 5px 0px;
}

QLabel[class="card-value"] {
    font-size: 16pt;
    font-weight: 700;
    color: #3b82f6;
}

QLabel[class="card-label"] {
    font-size: 10pt;
    font-weight: 500;
    color: #4b5563;
    padding: 5px 0px;
}

QLabel[class="stat-value"] {
    font-size: 24pt;
