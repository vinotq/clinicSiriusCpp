    border-radius: 8px;
    padding: 20px;
    margin: 10px 0px;
}

QWidget[class="profile-info-row"] {
    background-color: transparent;
    border: none;
    padding: 10px 0px;
}

QLabel[class="profile-info-label"] {
    color: #4b5563;
    font-size: 10pt;
    font-weight: 600;
    padding: 0px 0px 5px 0px;
}

QLabel[class="profile-info-value"] {
    color: #1f2937;
